<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.SettingsFragments.SignatureFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/d_sign"
        android:text="@string/sign"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/d25"
        android:textStyle="italic" />

    <com.example.cryptoproject.CustomView.CustomSelectAlgrorithm
        android:id="@+id/signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/d_sign"
        android:orientation="vertical"
        app:title_text="@string/signatute_algorithm" />

</LinearLayout>
